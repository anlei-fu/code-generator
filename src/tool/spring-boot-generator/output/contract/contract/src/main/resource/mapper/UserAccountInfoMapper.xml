<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.mapper.UserAccountInfoMapper">
    <insert id="addUserAccountInfo" parameterType="com.contract.pojo.req.AddUserAccountInfoReq">
          insert  into user_account_info t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="accountType != null">
                  t.account_type,
            </if>
            <if test="alipayMpid != null">
                  t.alipay_mpid,
            </if>
            <if test="lastLoginIp != null">
                  t.last_login_ip,
            </if>
            <if test="lastLoginTime != null">
                  t.last_login_time,
            </if>
            <if test="loginPwd != null">
                  t.login_pwd,
            </if>
            <if test="userName != null">
                  t.user_name,
            </if>
            <if test="verifyState != null">
                  t.verify_state,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="accountType != null">
                  #{accountType},
            </if>
            <if test="alipayMpid != null">
                  #{alipayMpid},
            </if>
            <if test="lastLoginIp != null">
                  #{lastLoginIp},
            </if>
            <if test="lastLoginTime != null">
                  #{lastLoginTime},
            </if>
            <if test="loginPwd != null">
                  #{loginPwd},
            </if>
            <if test="userName != null">
                  #{userName},
            </if>
            <if test="verifyState != null">
                  #{verifyState},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteUserAccountInfoById">
          delete from user_account_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserAccountInfoById" parameterType="com.contract.pojo.param.UpdateUserAccountInfoByIdParams">
        update user_account_info t
        <set>
            <if test="accountType != null">
                  t.account_type = #{AccountType},
            </if>
            <if test="alipayMpid != null">
                  t.alipay_mpid = #{AlipayMpid},
            </if>
            <if test="lastLoginIp != null">
                  t.last_login_ip = #{LastLoginIp},
            </if>
            <if test="lastLoginTime != null">
                  t.last_login_time = #{LastLoginTime},
            </if>
            <if test="loginPwd != null">
                  t.login_pwd = #{LoginPwd},
            </if>
            <if test="userName != null">
                  t.user_name = #{UserName},
            </if>
            <if test="verifyState != null">
                  t.verify_state = #{VerifyState}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserAccountInfoById" resultType="com.contract.pojo.entity.UserAccountInfo">
          select
             t.account_type,
             t.alipay_mpid,
             t.create_time,
             t.id,
             t.last_login_ip,
             t.last_login_time,
             t.login_pwd,
             t.user_name,
             t.verify_state
          form user_account_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserAccountInfoList" resultType="com.contract.pojo.entity.UserAccountInfo" parameterType="com.contract.pojo.req.GetUserAccountInfoListReq">
          select
             t.account_type,
             t.alipay_mpid,
             t.create_time,
             t.id,
             t.last_login_ip,
             t.last_login_time,
             t.login_pwd,
             t.user_name,
             t.verify_state
          form user_account_info t
          <where>
            <if test="accountType != null">
                  t.account_type = #{accountType}
            </if>
            <if test="alipayMpid != null and alipayMpid != ''">
                  and t.alipay_mpid = #{alipayMpid}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="lastLoginTimeStart !=null and  lastLoginTimeEnd != null">
                  and t.last_login_time between #{lastLoginTimeStart} and #{lastLoginTimeEnd}
            </if>
            <if test="verifyState != null">
                  and t.verify_state = #{verifyState}
            </if>
          </where>
    </select>
</mapper>
