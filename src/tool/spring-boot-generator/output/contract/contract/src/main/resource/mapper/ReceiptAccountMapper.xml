                  and t.merchant_no = #{merchantNo}
            </if>
            <if test="platAppId != null and platAppId != ''">
                  and t.plat_app_id = #{platAppId}
            </if>
            <if test="platAppSecret != null and platAppSecret != ''">
                  and t.plat_app_secret = #{platAppSecret}
            </if>
            <if test="status != null">
