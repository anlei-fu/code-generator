<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.mapper.SystemLogMapper">
    <insert id="addSystemLog" parameterType="com.contract.pojo.req.AddSystemLogReq">
          insert  into system_log t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="content != null">
                  t.content,
            </if>
            <if test="module != null">
                  t.module,
            </if>
            <if test="summary != null">
                  t.summary,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="content != null">
                  #{content},
            </if>
            <if test="module != null">
                  #{module},
            </if>
            <if test="summary != null">
                  #{summary},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteSystemLogById">
          delete from system_log t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateSystemLogById" parameterType="com.contract.pojo.param.UpdateSystemLogByIdParams">
        update system_log t
        <set>
            <if test="content != null">
                  t.content = #{Content},
            </if>
            <if test="module != null">
                  t.module = #{Module},
            </if>
            <if test="summary != null">
                  t.summary = #{Summary}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getSystemLogById" resultType="com.contract.pojo.entity.SystemLog">
          select
             t.content,
             t.create_time,
             t.id,
             t.module,
             t.summary
          form system_log t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getSystemLogList" resultType="com.contract.pojo.entity.SystemLog" parameterType="com.contract.pojo.req.GetSystemLogListReq">
          select
             t.content,
             t.create_time,
             t.id,
             t.module,
             t.summary
          form system_log t
          <where>
            <if test="content != null and content != ''">
                  t.content = #{content}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="module != null and module != ''">
                  and t.module = #{module}
            </if>
          </where>
    </select>
</mapper>
