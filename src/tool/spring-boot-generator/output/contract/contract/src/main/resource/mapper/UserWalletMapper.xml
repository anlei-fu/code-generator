<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.mapper.UserWalletMapper">
    <insert id="addUserWallet" parameterType="com.contract.pojo.req.AddUserWalletReq">
          insert  into user_wallet t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="companyBalance != null">
                  t.company_balance,
            </if>
            <if test="personBalance != null">
                  t.person_balance,
            </if>
            <if test="userId != null">
                  t.user_id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="companyBalance != null">
                  #{companyBalance},
            </if>
            <if test="personBalance != null">
                  #{personBalance},
            </if>
            <if test="userId != null">
                  #{userId},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteUserWalletById">
          delete from user_wallet t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserWalletById" parameterType="com.contract.pojo.param.UpdateUserWalletByIdParams">
        update user_wallet t
        <set>
            <if test="companyBalance != null">
                  t.company_balance = #{CompanyBalance},
            </if>
            <if test="personBalance != null">
                  t.person_balance = #{PersonBalance},
            </if>
            <if test="userId != null">
                  t.user_id = #{UserId}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserWalletById" resultType="com.contract.pojo.entity.UserWallet">
          select
             t.company_balance,
             t.create_time,
             t.id,
             t.person_balance,
             t.user_id
          form user_wallet t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserWalletList" resultType="com.contract.pojo.entity.UserWallet" parameterType="com.contract.pojo.req.GetUserWalletListReq">
          select
             t.company_balance,
             t.create_time,
             t.id,
             t.person_balance,
             t.user_id
          form user_wallet t
          <where>
            <if test="companyBalance != null">
                  t.company_balance = #{companyBalance}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="personBalance != null">
                  and t.person_balance = #{personBalance}
            </if>
            <if test="userId != null">
                  and t.user_id = #{userId}
            </if>
          </where>
    </select>
</mapper>
