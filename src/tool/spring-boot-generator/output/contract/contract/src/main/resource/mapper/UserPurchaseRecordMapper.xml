<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.mapper.UserPurchaseRecordMapper">
    <insert id="addUserPurchaseRecord" parameterType="com.contract.pojo.req.AddUserPurchaseRecordReq">
          insert  into user_purchase_record t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="contractCount != null">
                  t.contract_count,
            </if>
            <if test="contractType != null">
                  t.contract_type,
            </if>
            <if test="mealId != null">
                  t.meal_id,
            </if>
            <if test="mealPrice != null">
                  t.meal_price,
            </if>
            <if test="purchaseAfter != null">
                  t.purchase_after,
            </if>
            <if test="purchaseBefore != null">
                  t.purchase_before,
            </if>
            <if test="userId != null">
                  t.user_id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="contractCount != null">
                  #{contractCount},
            </if>
            <if test="contractType != null">
                  #{contractType},
            </if>
            <if test="mealId != null">
                  #{mealId},
            </if>
            <if test="mealPrice != null">
                  #{mealPrice},
            </if>
            <if test="purchaseAfter != null">
                  #{purchaseAfter},
            </if>
            <if test="purchaseBefore != null">
                  #{purchaseBefore},
            </if>
            <if test="userId != null">
                  #{userId},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteUserPurchaseRecordById">
          delete from user_purchase_record t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserPurchaseRecordById" parameterType="com.contract.pojo.param.UpdateUserPurchaseRecordByIdParams">
        update user_purchase_record t
        <set>
            <if test="contractCount != null">
                  t.contract_count = #{ContractCount},
            </if>
            <if test="contractType != null">
                  t.contract_type = #{ContractType},
            </if>
            <if test="mealId != null">
                  t.meal_id = #{MealId},
            </if>
            <if test="mealPrice != null">
                  t.meal_price = #{MealPrice},
            </if>
            <if test="purchaseAfter != null">
                  t.purchase_after = #{PurchaseAfter},
            </if>
            <if test="purchaseBefore != null">
                  t.purchase_before = #{PurchaseBefore},
            </if>
            <if test="userId != null">
                  t.user_id = #{UserId}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserPurchaseRecordById" resultType="com.contract.pojo.entity.UserPurchaseRecord">
          select
             t.contract_count,
             t.contract_type,
             t.create_time,
             t.id,
             t.meal_id,
             t.meal_price,
             t.purchase_after,
             t.purchase_before,
             t.user_id
          form user_purchase_record t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserPurchaseRecordList" resultType="com.contract.pojo.entity.UserPurchaseRecord" parameterType="com.contract.pojo.req.GetUserPurchaseRecordListReq">
          select
             t.contract_count,
             t.contract_type,
             t.create_time,
             t.id,
             t.meal_id,
             t.meal_price,
             t.purchase_after,
             t.purchase_before,
             t.user_id
          form user_purchase_record t
          <where>
            <if test="contractCount != null">
                  t.contract_count = #{contractCount}
            </if>
            <if test="contractType != null">
                  and t.contract_type = #{contractType}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="mealId != null">
                  and t.meal_id = #{mealId}
            </if>
            <if test="mealPrice != null">
                  and t.meal_price = #{mealPrice}
            </if>
            <if test="purchaseAfter != null">
                  and t.purchase_after = #{purchaseAfter}
            </if>
            <if test="purchaseBefore != null">
                  and t.purchase_before = #{purchaseBefore}
            </if>
            <if test="userId != null">
                  and t.user_id = #{userId}
            </if>
          </where>
    </select>
</mapper>
