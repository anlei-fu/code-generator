<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.mapper.UserSignSealMapper">
    <insert id="addUserSignSeal" parameterType="com.contract.pojo.req.AddUserSignSealReq">
          insert  into user_sign_seal t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="belongId != null">
                  t.belong_id,
            </if>
            <if test="belongType != null">
                  t.belong_type,
            </if>
            <if test="signName != null">
                  t.sign_name,
            </if>
            <if test="signPic != null">
                  t.sign_pic,
            </if>
            <if test="userId != null">
                  t.user_id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="belongId != null">
                  #{belongId},
            </if>
            <if test="belongType != null">
                  #{belongType},
            </if>
            <if test="signName != null">
                  #{signName},
            </if>
            <if test="signPic != null">
                  #{signPic},
            </if>
            <if test="userId != null">
                  #{userId},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteUserSignSealById">
          delete from user_sign_seal t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserSignSealById" parameterType="com.contract.pojo.param.UpdateUserSignSealByIdParams">
        update user_sign_seal t
        <set>
            <if test="belongId != null">
                  t.belong_id = #{BelongId},
            </if>
            <if test="belongType != null">
                  t.belong_type = #{BelongType},
            </if>
            <if test="signName != null">
                  t.sign_name = #{SignName},
            </if>
            <if test="signPic != null">
                  t.sign_pic = #{SignPic},
            </if>
            <if test="userId != null">
                  t.user_id = #{UserId}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserSignSealById" resultType="com.contract.pojo.entity.UserSignSeal">
          select
             t.belong_id,
             t.belong_type,
             t.create_time,
             t.id,
             t.sign_name,
             t.sign_pic,
             t.user_id
          form user_sign_seal t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserSignSealList" resultType="com.contract.pojo.entity.UserSignSeal" parameterType="com.contract.pojo.req.GetUserSignSealListReq">
          select
             t.belong_id,
             t.belong_type,
             t.create_time,
             t.id,
             t.sign_name,
             t.sign_pic,
             t.user_id
          form user_sign_seal t
          <where>
            <if test="belongId != null">
                  t.belong_id = #{belongId}
            </if>
            <if test="belongType != null">
                  and t.belong_type = #{belongType}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="userId != null">
                  and t.user_id = #{userId}
            </if>
          </where>
    </select>
</mapper>
