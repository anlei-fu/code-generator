<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.mapper.UserContractTemplateMapper">
    <insert id="addUserContractTemplate" parameterType="com.contract.pojo.req.AddUserContractTemplateReq">
          insert  into user_contract_template t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="belongId != null">
                  t.belong_id,
            </if>
            <if test="belongType != null">
                  t.belong_type,
            </if>
            <if test="contractFile != null">
                  t.contract_file,
            </if>
            <if test="contractName != null">
                  t.contract_name,
            </if>
            <if test="userId != null">
                  t.user_id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="belongId != null">
                  #{belongId},
            </if>
            <if test="belongType != null">
                  #{belongType},
            </if>
            <if test="contractFile != null">
                  #{contractFile},
            </if>
            <if test="contractName != null">
                  #{contractName},
            </if>
            <if test="userId != null">
                  #{userId},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteUserContractTemplateById">
          delete from user_contract_template t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserContractTemplateById" parameterType="com.contract.pojo.param.UpdateUserContractTemplateByIdParams">
        update user_contract_template t
        <set>
            <if test="belongId != null">
                  t.belong_id = #{BelongId},
            </if>
            <if test="belongType != null">
                  t.belong_type = #{BelongType},
            </if>
            <if test="contractFile != null">
                  t.contract_file = #{ContractFile},
            </if>
            <if test="contractName != null">
                  t.contract_name = #{ContractName},
            </if>
            <if test="userId != null">
                  t.user_id = #{UserId}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserContractTemplateById" resultType="com.contract.pojo.entity.UserContractTemplate">
          select
             t.belong_id,
             t.belong_type,
             t.contract_file,
             t.contract_name,
             t.create_time,
             t.id,
             t.user_id
          form user_contract_template t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserContractTemplateList" resultType="com.contract.pojo.entity.UserContractTemplate" parameterType="com.contract.pojo.req.GetUserContractTemplateListReq">
          select
             t.belong_id,
             t.belong_type,
             t.contract_file,
             t.contract_name,
             t.create_time,
             t.id,
             t.user_id
          form user_contract_template t
          <where>
            <if test="belongId != null">
                  t.belong_id = #{belongId}
            </if>
            <if test="belongType != null">
                  and t.belong_type = #{belongType}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="userId != null">
                  and t.user_id = #{userId}
            </if>
          </where>
    </select>
</mapper>
