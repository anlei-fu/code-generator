<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contract.mapper.SystemContractTemplateMapper">
    <insert id="addSystemContractTemplate" parameterType="com.contract.pojo.req.AddSystemContractTemplateReq">
          insert  into system_contract_template t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="contractName != null">
                  t.contract_name,
            </if>
            <if test="contractType != null">
                  t.contract_type,
            </if>
            <if test="id != null">
                  t.id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="contractName != null">
                  #{contractName},
            </if>
            <if test="contractType != null">
                  #{contractType},
            </if>
            <if test="id != null">
                  #{id},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteSystemContractTemplateByContractFile">
          delete from system_contract_template t
          <where>
            <if test="contractFile != null and contractFile != ''">
                  t.contract_file = #{contractFile}
            </if>
          </where>
    </delete>
    <update id="updateSystemContractTemplateByContractFile" parameterType="com.contract.pojo.param.UpdateSystemContractTemplateByContractFileParams">
        update system_contract_template t
        <set>
            <if test="contractName != null">
                  t.contract_name = #{ContractName},
            </if>
            <if test="contractType != null">
                  t.contract_type = #{ContractType},
            </if>
            <if test="id != null">
                  t.id = #{Id}
            </if>
        </set>
          <where>
            <if test="contractFile != null and contractFile != ''">
                  t.contract_file = #{contractFile}
            </if>
          </where>
    </update>
    <select id="getSystemContractTemplateByContractFile" resultType="com.contract.pojo.entity.SystemContractTemplate">
          select
             t.contract_file,
             t.contract_name,
             t.contract_type,
             t.create_time,
             t.id
          form system_contract_template t
          <where>
            <if test="contractFile != null and contractFile != ''">
                  t.contract_file = #{contractFile}
            </if>
          </where>
    </select>
    <select id="getSystemContractTemplateList" resultType="com.contract.pojo.entity.SystemContractTemplate" parameterType="com.contract.pojo.req.GetSystemContractTemplateListReq">
          select
             t.contract_file,
             t.contract_name,
             t.contract_type,
             t.create_time,
             t.id
          form system_contract_template t
          <where>
            <if test="contractType != null">
                  t.contract_type = #{contractType}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="id != null">
                  and t.id = #{id}
            </if>
          </where>
    </select>
</mapper>
