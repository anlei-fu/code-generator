<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.WorkareaInfoMapper">
    <insert id="addWorkareaInfo" parameterType="com.railway.pojo.req.AddWorkareaInfoReq">
          insert  into workarea_info t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.full_name,
            <if test="inputCode != null">
                  t.input_code,
            </if>
             t.is_delete,
            <if test="operator != null">
                  t.operator,
            </if>
             t.short_name,
             t.workshop_id,
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{fullName},
            <if test="inputCode != null">
                  #{inputCode},
            </if>
             #{isDelete},
            <if test="operator != null">
                  #{operator},
            </if>
             #{shortName},
             #{workshopId},
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteWorkareaInfoById">
          delete from workarea_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateWorkareaInfoById" parameterType="com.railway.pojo.param.UpdateWorkareaInfoByIdParams">
        update workarea_info t
        <set>
            <if test="fullName != null">
                  t.full_name = #{FullName},
            </if>
            <if test="inputCode != null">
                  t.input_code = #{InputCode},
            </if>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="shortName != null">
                  t.short_name = #{ShortName},
            </if>
            <if test="workshopId != null">
                  t.workshop_id = #{WorkshopId}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getWorkareaInfoById" resultType="com.railway.pojo.entity.WorkareaInfo">
          select
             t.create_time,
             t.full_name,
             t.id,
             t.input_code,
             t.is_delete,
             t.operator,
             t.short_name,
             t.update_time,
             t.workshop_id
          form workarea_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getWorkareaInfoList" resultType="com.railway.pojo.entity.WorkareaInfo" parameterType="com.railway.pojo.req.GetWorkareaInfoListReq">
          select
             t.create_time,
             t.full_name,
             t.id,
             t.input_code,
             t.is_delete,
             t.operator,
             t.short_name,
             t.update_time,
             t.workshop_id
          form workarea_info t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="inputCode != null and inputCode != ''">
                  and t.input_code = #{inputCode}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
            <if test="workshopId != null">
                  and t.workshop_id = #{workshopId}
            </if>
          </where>
    </select>
</mapper>
