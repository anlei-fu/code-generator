<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.StationLineMapper">
    <insert id="addStationLine" parameterType="com.railway.pojo.req.AddStationLineReq">
          insert  into station_line t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="centDistance != null">
                  t.cent_distance,
            </if>
            <if test="direction != null">
                  t.direction,
            </if>
            <if test="endDistance != null">
                  t.end_distance,
            </if>
             t.is_delete,
             t.line_id,
            <if test="operator != null">
                  t.operator,
            </if>
            <if test="sortNum != null">
                  t.sort_num,
            </if>
            <if test="startDistance != null">
                  t.start_distance,
            </if>
             t.station_id,
            <if test="status != null">
                  t.status,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="centDistance != null">
                  #{centDistance},
            </if>
            <if test="direction != null">
                  #{direction},
            </if>
            <if test="endDistance != null">
                  #{endDistance},
            </if>
             #{isDelete},
             #{lineId},
            <if test="operator != null">
                  #{operator},
            </if>
            <if test="sortNum != null">
                  #{sortNum},
            </if>
            <if test="startDistance != null">
                  #{startDistance},
            </if>
             #{stationId},
            <if test="status != null">
                  #{status},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteStationLineById">
          delete from station_line t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateStationLineById" parameterType="com.railway.pojo.param.UpdateStationLineByIdParams">
        update station_line t
        <set>
            <if test="centDistance != null">
                  t.cent_distance = #{CentDistance},
            </if>
            <if test="direction != null">
                  t.direction = #{Direction},
            </if>
            <if test="endDistance != null">
                  t.end_distance = #{EndDistance},
            </if>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="lineId != null">
                  t.line_id = #{LineId},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="sortNum != null">
                  t.sort_num = #{SortNum},
            </if>
            <if test="startDistance != null">
                  t.start_distance = #{StartDistance},
            </if>
            <if test="stationId != null">
                  t.station_id = #{StationId},
            </if>
            <if test="status != null">
                  t.status = #{Status}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getStationLineById" resultType="com.railway.pojo.entity.StationLine">
          select
             t.cent_distance,
             t.create_time,
             t.direction,
             t.end_distance,
             t.id,
             t.is_delete,
             t.line_id,
             t.operator,
             t.sort_num,
             t.start_distance,
             t.station_id,
             t.status,
             t.update_time
          form station_line t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getStationLineList" resultType="com.railway.pojo.entity.StationLine" parameterType="com.railway.pojo.req.GetStationLineListReq">
          select
             t.cent_distance,
             t.create_time,
             t.direction,
             t.end_distance,
             t.id,
             t.is_delete,
             t.line_id,
             t.operator,
             t.sort_num,
             t.start_distance,
             t.station_id,
             t.status,
             t.update_time
          form station_line t
          <where>
            <if test="centDistance != null">
                  t.cent_distance = #{centDistance}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="direction != null">
                  and t.direction = #{direction}
            </if>
            <if test="endDistance != null">
                  and t.end_distance = #{endDistance}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="lineId != null">
                  and t.line_id = #{lineId}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="sortNum != null and sortNum != ''">
                  and t.sort_num = #{sortNum}
            </if>
            <if test="startDistance != null">
                  and t.start_distance = #{startDistance}
            </if>
            <if test="stationId != null">
                  and t.station_id = #{stationId}
            </if>
            <if test="status != null">
                  and t.status = #{status}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
