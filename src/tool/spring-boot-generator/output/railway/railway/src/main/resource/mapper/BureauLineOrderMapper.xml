<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.BureauLineOrderMapper">
    <insert id="addBureauLineOrder" parameterType="com.railway.pojo.req.AddBureauLineOrderReq">
          insert  into bureau_line_order t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bureauId != null">
                  t.bureau_id,
            </if>
            <if test="lineId != null">
                  t.line_id,
            </if>
            <if test="operator != null">
                  t.operator,
            </if>
            <if test="sortNum != null">
                  t.sort_num,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bureauId != null">
                  #{bureauId},
            </if>
            <if test="lineId != null">
                  #{lineId},
            </if>
            <if test="operator != null">
                  #{operator},
            </if>
            <if test="sortNum != null">
                  #{sortNum},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteBureauLineOrderById">
          delete from bureau_line_order t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateBureauLineOrderById" parameterType="com.railway.pojo.param.UpdateBureauLineOrderByIdParams">
        update bureau_line_order t
        <set>
            <if test="bureauId != null">
                  t.bureau_id = #{BureauId},
            </if>
            <if test="lineId != null">
                  t.line_id = #{LineId},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="sortNum != null">
                  t.sort_num = #{SortNum}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getBureauLineOrderById" resultType="com.railway.pojo.entity.BureauLineOrder">
          select
             t.bureau_id,
             t.create_time,
             t.id,
             t.line_id,
             t.operator,
             t.sort_num,
             t.update_time
          form bureau_line_order t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getBureauLineOrderList" resultType="com.railway.pojo.entity.BureauLineOrder" parameterType="com.railway.pojo.req.GetBureauLineOrderListReq">
          select
             t.bureau_id,
             t.create_time,
             t.id,
             t.line_id,
             t.operator,
             t.sort_num,
             t.update_time
          form bureau_line_order t
          <where>
            <if test="bureauId != null">
                  t.bureau_id = #{bureauId}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="lineId != null">
                  and t.line_id = #{lineId}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="sortNum != null and sortNum != ''">
                  and t.sort_num = #{sortNum}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
