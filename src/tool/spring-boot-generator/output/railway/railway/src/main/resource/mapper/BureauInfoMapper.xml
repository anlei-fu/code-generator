<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.BureauInfoMapper">
    <insert id="addBureauInfo" parameterType="com.railway.pojo.req.AddBureauInfoReq">
          insert  into bureau_info t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.bureau_code,
             t.bureau_name,
            <if test="inputCode != null">
                  t.input_code,
            </if>
             t.is_delete,
            <if test="operator != null">
                  t.operator,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{bureauCode},
             #{bureauName},
            <if test="inputCode != null">
                  #{inputCode},
            </if>
             #{isDelete},
            <if test="operator != null">
                  #{operator},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteBureauInfoById">
          delete from bureau_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateBureauInfoById" parameterType="com.railway.pojo.param.UpdateBureauInfoByIdParams">
        update bureau_info t
        <set>
            <if test="bureauCode != null">
                  t.bureau_code = #{BureauCode},
            </if>
            <if test="bureauName != null">
                  t.bureau_name = #{BureauName},
            </if>
            <if test="inputCode != null">
                  t.input_code = #{InputCode},
            </if>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getBureauInfoById" resultType="com.railway.pojo.entity.BureauInfo">
          select
             t.bureau_code,
             t.bureau_name,
             t.create_time,
             t.id,
             t.input_code,
             t.is_delete,
             t.operator,
             t.update_time
          form bureau_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getBureauInfoList" resultType="com.railway.pojo.entity.BureauInfo" parameterType="com.railway.pojo.req.GetBureauInfoListReq">
          select
             t.bureau_code,
             t.bureau_name,
             t.create_time,
             t.id,
             t.input_code,
             t.is_delete,
             t.operator,
             t.update_time
          form bureau_info t
          <where>
            <if test="bureauCode != null">
                  t.bureau_code = #{bureauCode}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="inputCode != null and inputCode != ''">
                  and t.input_code = #{inputCode}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
