<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.DamageOrderMapper">
    <insert id="addDamageOrder" parameterType="com.railway.pojo.req.AddDamageOrderReq">
          insert  into damage_order t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.is_delete,
            <if test="submitStaff != null">
                  t.submit_staff,
            </if>
            <if test="submitTime != null">
                  t.submit_time,
            </if>
            <if test="workareaId != null">
                  t.workarea_id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{isDelete},
            <if test="submitStaff != null">
                  #{submitStaff},
            </if>
            <if test="submitTime != null">
                  #{submitTime},
            </if>
            <if test="workareaId != null">
                  #{workareaId},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteDamageOrderByOrderNo">
          delete from damage_order t
          <where>
            <if test="orderNo != null">
                  t.order_no = #{orderNo}
            </if>
          </where>
    </delete>
    <update id="updateDamageOrderByOrderNo" parameterType="com.railway.pojo.param.UpdateDamageOrderByOrderNoParams">
        update damage_order t
        <set>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="submitStaff != null">
                  t.submit_staff = #{SubmitStaff},
            </if>
            <if test="submitTime != null">
                  t.submit_time = #{SubmitTime},
            </if>
            <if test="workareaId != null">
                  t.workarea_id = #{WorkareaId}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="orderNo != null">
                  t.order_no = #{orderNo}
            </if>
          </where>
    </update>
    <select id="getDamageOrderByOrderNo" resultType="com.railway.pojo.entity.DamageOrder">
          select
             t.create_time,
             t.is_delete,
             t.order_no,
             t.submit_staff,
             t.submit_time,
             t.update_time,
             t.workarea_id
          form damage_order t
          <where>
            <if test="orderNo != null">
                  t.order_no = #{orderNo}
            </if>
          </where>
    </select>
    <select id="getDamageOrderList" resultType="com.railway.pojo.entity.DamageOrder" parameterType="com.railway.pojo.req.GetDamageOrderListReq">
          select
             t.create_time,
             t.is_delete,
             t.order_no,
             t.submit_staff,
             t.submit_time,
             t.update_time,
             t.workarea_id
          form damage_order t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="submitStaff != null">
                  and t.submit_staff = #{submitStaff}
            </if>
            <if test="submitTimeStart !=null and  submitTimeEnd != null">
                  and t.submit_time between #{submitTimeStart} and #{submitTimeEnd}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
            <if test="workareaId != null">
                  and t.workarea_id = #{workareaId}
            </if>
          </where>
    </select>
</mapper>
