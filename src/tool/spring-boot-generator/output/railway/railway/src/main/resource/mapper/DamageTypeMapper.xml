<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.DamageTypeMapper">
    <insert id="addDamageType" parameterType="com.railway.pojo.req.AddDamageTypeReq">
          insert  into damage_type t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="damageDesc != null">
                  t.damage_desc,
            </if>
            <if test="damageNo != null">
                  t.damage_no,
            </if>
            <if test="damageType != null">
                  t.damage_type,
            </if>
             t.is_delete,
            <if test="operator != null">
                  t.operator,
            </if>
            <if test="sortNum != null">
                  t.sort_num,
            </if>
            <if test="status != null">
                  t.status,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="damageDesc != null">
                  #{damageDesc},
            </if>
            <if test="damageNo != null">
                  #{damageNo},
            </if>
            <if test="damageType != null">
                  #{damageType},
            </if>
             #{isDelete},
            <if test="operator != null">
                  #{operator},
            </if>
            <if test="sortNum != null">
                  #{sortNum},
            </if>
            <if test="status != null">
                  #{status},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteDamageTypeById">
          delete from damage_type t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateDamageTypeById" parameterType="com.railway.pojo.param.UpdateDamageTypeByIdParams">
        update damage_type t
        <set>
            <if test="damageDesc != null">
                  t.damage_desc = #{DamageDesc},
            </if>
            <if test="damageNo != null">
                  t.damage_no = #{DamageNo},
            </if>
            <if test="damageType != null">
                  t.damage_type = #{DamageType},
            </if>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="sortNum != null">
                  t.sort_num = #{SortNum},
            </if>
            <if test="status != null">
                  t.status = #{Status}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getDamageTypeById" resultType="com.railway.pojo.entity.DamageType">
          select
             t.create_time,
             t.damage_desc,
             t.damage_no,
             t.damage_type,
             t.id,
             t.is_delete,
             t.operator,
             t.sort_num,
             t.status,
             t.update_time
          form damage_type t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getDamageTypeList" resultType="com.railway.pojo.entity.DamageType" parameterType="com.railway.pojo.req.GetDamageTypeListReq">
          select
             t.create_time,
             t.damage_desc,
             t.damage_no,
             t.damage_type,
             t.id,
             t.is_delete,
             t.operator,
             t.sort_num,
             t.status,
             t.update_time
          form damage_type t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="damageDesc != null and damageDesc != ''">
                  and t.damage_desc = #{damageDesc}
            </if>
            <if test="damageNo != null and damageNo != ''">
                  and t.damage_no = #{damageNo}
            </if>
            <if test="damageType != null">
                  and t.damage_type = #{damageType}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="sortNum != null and sortNum != ''">
                  and t.sort_num = #{sortNum}
            </if>
            <if test="status != null">
                  and t.status = #{status}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
