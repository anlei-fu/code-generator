<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.TrackInfoMapper">
    <insert id="addTrackInfo" parameterType="com.railway.pojo.req.AddTrackInfoReq">
          insert  into track_info t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.is_delete,
            <if test="operator != null">
                  t.operator,
            </if>
             t.track_code,
             t.track_division_id,
            <if test="trackType != null">
                  t.track_type,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{isDelete},
            <if test="operator != null">
                  #{operator},
            </if>
             #{trackCode},
             #{trackDivisionId},
            <if test="trackType != null">
                  #{trackType},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteTrackInfoById">
          delete from track_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateTrackInfoById" parameterType="com.railway.pojo.param.UpdateTrackInfoByIdParams">
        update track_info t
        <set>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="trackCode != null">
                  t.track_code = #{TrackCode},
            </if>
            <if test="trackDivisionId != null">
                  t.track_division_id = #{TrackDivisionId},
            </if>
            <if test="trackType != null">
                  t.track_type = #{TrackType}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getTrackInfoById" resultType="com.railway.pojo.entity.TrackInfo">
          select
             t.create_time,
             t.id,
             t.is_delete,
             t.operator,
             t.track_code,
             t.track_division_id,
             t.track_type,
             t.update_time
          form track_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getTrackInfoList" resultType="com.railway.pojo.entity.TrackInfo" parameterType="com.railway.pojo.req.GetTrackInfoListReq">
          select
             t.create_time,
             t.id,
             t.is_delete,
             t.operator,
             t.track_code,
             t.track_division_id,
             t.track_type,
             t.update_time
          form track_info t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="trackCode != null">
                  and t.track_code = #{trackCode}
            </if>
            <if test="trackDivisionId != null">
                  and t.track_division_id = #{trackDivisionId}
            </if>
            <if test="trackType != null">
                  and t.track_type = #{trackType}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
