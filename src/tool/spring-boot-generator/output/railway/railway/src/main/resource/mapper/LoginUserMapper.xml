<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.LoginUserMapper">
    <insert id="addLoginUser" parameterType="com.railway.pojo.req.AddLoginUserReq">
          insert  into login_user 
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                  login_user.name,
            </if>
            <if test="password != null">
                  login_user.password,
            </if>
            <if test="state != null">
                  login_user.state,
            </if>
            <if test="type != null">
                  login_user.type,
            </if>
             login_user.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                  #{name},
            </if>
            <if test="password != null">
                  #{password},
            </if>
            <if test="state != null">
                  #{state},
            </if>
            <if test="type != null">
                  #{type},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteLoginUserById">
          delete from login_user 
          <where>
            <if test="id != null">
                  login_user.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateLoginUserById" parameterType="com.railway.pojo.param.UpdateLoginUserByIdParams">
        update login_user 
        <set>
            <if test="name != null">
                  login_user.name = #{Name},
            </if>
            <if test="password != null">
                  login_user.password = #{Password},
            </if>
            <if test="state != null">
                  login_user.state = #{State},
            </if>
            <if test="type != null">
                  login_user.type = #{Type}
            </if>
            login_user.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  login_user.id = #{id}
            </if>
          </where>
    </update>
    <select id="getLoginUserById" resultType="com.railway.pojo.entity.LoginUser">
          select
             login_user.create_time,
             login_user.id,
             login_user.name,
             login_user.password,
             login_user.state,
             login_user.type,
             login_user.update_time
          form login_user 
          <where>
            <if test="id != null">
                  login_user.id = #{id}
            </if>
          </where>
    </select>
    <select id="getLoginUserList" resultType="com.railway.pojo.entity.LoginUser" parameterType="com.railway.pojo.req.GetLoginUserListReq">
          select
             login_user.create_time,
             login_user.id,
             login_user.name,
             login_user.password,
             login_user.state,
             login_user.type,
             login_user.update_time
          form login_user 
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  login_user.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="state != null and state != ''">
                  and login_user.state = #{state}
            </if>
            <if test="type != null and type != ''">
                  and login_user.type = #{type}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and login_user.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
