<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.DevicePositionMapper">
    <insert id="addDevicePosition" parameterType="com.railway.pojo.req.AddDevicePositionReq">
          insert  into device_position t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceCode != null">
                  t.device_code,
            </if>
            <if test="deviceNo != null">
                  t.device_no,
            </if>
            <if test="direction != null">
                  t.direction,
            </if>
            <if test="lineCategory != null">
                  t.line_category,
            </if>
            <if test="lineId != null">
                  t.line_id,
            </if>
            <if test="lineName != null">
                  t.line_name,
            </if>
            <if test="miles != null">
                  t.miles,
            </if>
            <if test="stationId != null">
                  t.station_id,
            </if>
            <if test="stockExchange != null">
                  t.stock_exchange,
            </if>
            <if test="thighTrackId != null">
                  t.thigh_track_id,
            </if>
            <if test="trackId != null">
                  t.track_id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceCode != null">
                  #{deviceCode},
            </if>
            <if test="deviceNo != null">
                  #{deviceNo},
            </if>
            <if test="direction != null">
                  #{direction},
            </if>
            <if test="lineCategory != null">
                  #{lineCategory},
            </if>
            <if test="lineId != null">
                  #{lineId},
            </if>
            <if test="lineName != null">
                  #{lineName},
            </if>
            <if test="miles != null">
                  #{miles},
            </if>
            <if test="stationId != null">
                  #{stationId},
            </if>
            <if test="stockExchange != null">
                  #{stockExchange},
            </if>
            <if test="thighTrackId != null">
                  #{thighTrackId},
            </if>
            <if test="trackId != null">
                  #{trackId},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteDevicePositionById">
          delete from device_position t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateDevicePositionById" parameterType="com.railway.pojo.param.UpdateDevicePositionByIdParams">
        update device_position t
        <set>
            <if test="deviceCode != null">
                  t.device_code = #{DeviceCode},
            </if>
            <if test="deviceNo != null">
                  t.device_no = #{DeviceNo},
            </if>
            <if test="direction != null">
                  t.direction = #{Direction},
            </if>
            <if test="lineCategory != null">
                  t.line_category = #{LineCategory},
            </if>
            <if test="lineId != null">
                  t.line_id = #{LineId},
            </if>
            <if test="lineName != null">
                  t.line_name = #{LineName},
            </if>
            <if test="miles != null">
                  t.miles = #{Miles},
            </if>
            <if test="stationId != null">
                  t.station_id = #{StationId},
            </if>
            <if test="stockExchange != null">
                  t.stock_exchange = #{StockExchange},
            </if>
            <if test="thighTrackId != null">
                  t.thigh_track_id = #{ThighTrackId},
            </if>
            <if test="trackId != null">
                  t.track_id = #{TrackId}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getDevicePositionById" resultType="com.railway.pojo.entity.DevicePosition">
          select
             t.create_time,
             t.device_code,
             t.device_no,
             t.direction,
             t.id,
             t.line_category,
             t.line_id,
             t.line_name,
             t.miles,
             t.station_id,
             t.stock_exchange,
             t.thigh_track_id,
             t.track_id,
             t.update_time
          form device_position t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getDevicePositionList" resultType="com.railway.pojo.entity.DevicePosition" parameterType="com.railway.pojo.req.GetDevicePositionListReq">
          select
             t.create_time,
             t.device_code,
             t.device_no,
             t.direction,
             t.id,
             t.line_category,
             t.line_id,
             t.line_name,
             t.miles,
             t.station_id,
             t.stock_exchange,
             t.thigh_track_id,
             t.track_id,
             t.update_time
          form device_position t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="deviceCode != null and deviceCode != ''">
                  and t.device_code = #{deviceCode}
            </if>
            <if test="deviceNo != null and deviceNo != ''">
                  and t.device_no = #{deviceNo}
            </if>
            <if test="direction != null">
                  and t.direction = #{direction}
            </if>
            <if test="lineCategory != null">
                  and t.line_category = #{lineCategory}
            </if>
            <if test="lineId != null">
                  and t.line_id = #{lineId}
            </if>
            <if test="miles != null">
                  and t.miles = #{miles}
            </if>
            <if test="stationId != null">
                  and t.station_id = #{stationId}
            </if>
            <if test="stockExchange != null">
                  and t.stock_exchange = #{stockExchange}
            </if>
            <if test="thighTrackId != null">
                  and t.thigh_track_id = #{thighTrackId}
            </if>
            <if test="trackId != null">
                  and t.track_id = #{trackId}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
