<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.DetectGroupMapper">
    <insert id="addDetectGroup" parameterType="com.railway.pojo.req.AddDetectGroupReq">
          insert  into detect_group t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupName != null">
                  t.group_name,
            </if>
             t.is_delete,
            <if test="leaderId != null">
                  t.leader_id,
            </if>
            <if test="operator != null">
                  t.operator,
            </if>
            <if test="status != null">
                  t.status,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupName != null">
                  #{groupName},
            </if>
             #{isDelete},
            <if test="leaderId != null">
                  #{leaderId},
            </if>
            <if test="operator != null">
                  #{operator},
            </if>
            <if test="status != null">
                  #{status},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteDetectGroupById">
          delete from detect_group t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateDetectGroupById" parameterType="com.railway.pojo.param.UpdateDetectGroupByIdParams">
        update detect_group t
        <set>
            <if test="groupName != null">
                  t.group_name = #{GroupName},
            </if>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="leaderId != null">
                  t.leader_id = #{LeaderId},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="status != null">
                  t.status = #{Status}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getDetectGroupById" resultType="com.railway.pojo.entity.DetectGroup">
          select
             t.create_time,
             t.group_name,
             t.id,
             t.is_delete,
             t.leader_id,
             t.operator,
             t.status,
             t.update_time
          form detect_group t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getDetectGroupList" resultType="com.railway.pojo.entity.DetectGroup" parameterType="com.railway.pojo.req.GetDetectGroupListReq">
          select
             t.create_time,
             t.group_name,
             t.id,
             t.is_delete,
             t.leader_id,
             t.operator,
             t.status,
             t.update_time
          form detect_group t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="leaderId != null">
                  and t.leader_id = #{leaderId}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="status != null">
                  and t.status = #{status}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
          </where>
    </select>
</mapper>
