    <insert id="addStationInfo" parameterType="com.railway.pojo.req.AddStationInfoReq">
          insert  into station_info t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fullName != null">
                  t.full_name,
            </if>
            <if test="inputCode != null">
                  t.input_code,
            </if>
            <if test="isDelete != null">
                  t.is_delete,
            </if>
            <if test="jobType != null">
                  t.job_type,
