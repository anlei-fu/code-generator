                  t.station_code,
            </if>
            <if test="stationGrade != null">
                  t.station_grade,
            </if>
            <if test="stationType != null">
                  t.station_type,
            </if>
            <if test="status != null">
                  t.status,
            </if>
            <if test="ternoutNum != null">
                  t.ternout_num,
            </if>
            <if test="thighTrackNum != null">
                  t.thigh_track_num,
            </if>
             t.track_division_id,
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
