             current_timestamp
          </trim>
    </insert>
    <delete id="deleteStationInfoById">
          delete from station_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateStationInfoById" parameterType="com.railway.pojo.param.UpdateStationInfoByIdParams">
        update station_info t
        <set>
            <if test="fullName != null">
                  t.full_name = #{FullName},
            </if>
            <if test="inputCode != null">
                  t.input_code = #{InputCode},
            </if>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="jobType != null">
                  t.job_type = #{JobType},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="shortName != null">
                  t.short_name = #{ShortName},
            </if>
            <if test="stationCode != null">
                  t.station_code = #{StationCode},
            </if>
            <if test="stationGrade != null">
                  t.station_grade = #{StationGrade},
            </if>
            <if test="stationType != null">
                  t.station_type = #{StationType},
            </if>
            <if test="status != null">
                  t.status = #{Status},
            </if>
            <if test="ternoutNum != null">
                  t.ternout_num = #{TernoutNum},
            </if>
            <if test="thighTrackNum != null">
                  t.thigh_track_num = #{ThighTrackNum},
            </if>
            <if test="trackDivisionId != null">
                  t.track_division_id = #{TrackDivisionId}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getStationInfoById" resultType="com.railway.pojo.entity.StationInfo">
          select
             t.create_time,
             t.full_name,
             t.id,
             t.input_code,
             t.is_delete,
             t.job_type,
             t.operator,
             t.short_name,
             t.station_code,
             t.station_grade,
             t.station_type,
             t.status,
             t.ternout_num,
             t.thigh_track_num,
             t.track_division_id,
             t.update_time
          form station_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getStationInfoList" resultType="com.railway.pojo.entity.StationInfo" parameterType="com.railway.pojo.req.GetStationInfoListReq">
          select
             t.create_time,
             t.full_name,
             t.id,
             t.input_code,
             t.is_delete,
             t.job_type,
             t.operator,
             t.short_name,
             t.station_code,
             t.station_grade,
             t.station_type,
             t.status,
             t.ternout_num,
             t.thigh_track_num,
             t.track_division_id,
             t.update_time
          form station_info t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="inputCode != null and inputCode != ''">
