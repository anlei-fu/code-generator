<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.railway.mapper.DivisionUserMapper">
    <insert id="addDivisionUser" parameterType="com.railway.pojo.req.AddDivisionUserReq">
          insert  into division_user t
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="divisionId != null">
                  t.division_id,
            </if>
            <if test="isDelete != null">
                  t.is_delete,
            </if>
            <if test="operator != null">
                  t.operator,
            </if>
            <if test="userId != null">
                  t.user_id,
            </if>
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="divisionId != null">
                  #{divisionId},
            </if>
            <if test="isDelete != null">
                  #{isDelete},
            </if>
            <if test="operator != null">
                  #{operator},
            </if>
            <if test="userId != null">
                  #{userId},
            </if>
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteDivisionUserById">
          delete from division_user t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateDivisionUserById" parameterType="com.railway.pojo.param.UpdateDivisionUserByIdParams">
        update division_user t
        <set>
            <if test="divisionId != null">
                  t.division_id = #{DivisionId},
            </if>
            <if test="isDelete != null">
                  t.is_delete = #{IsDelete},
            </if>
            <if test="operator != null">
                  t.operator = #{Operator},
            </if>
            <if test="userId != null">
                  t.user_id = #{UserId}
            </if>
            t.update_time= current_timestamp
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getDivisionUserById" resultType="com.railway.pojo.entity.DivisionUser">
          select
             t.create_time,
             t.division_id,
             t.id,
             t.is_delete,
             t.operator,
             t.update_time,
             t.user_id
          form division_user t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getDivisionUserList" resultType="com.railway.pojo.entity.DivisionUser" parameterType="com.railway.pojo.req.GetDivisionUserListReq">
          select
             t.create_time,
             t.division_id,
             t.id,
             t.is_delete,
             t.operator,
             t.update_time,
             t.user_id
          form division_user t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="divisionId != null">
                  and t.division_id = #{divisionId}
            </if>
            <if test="isDelete != null">
                  and t.is_delete = #{isDelete}
            </if>
            <if test="operator != null">
                  and t.operator = #{operator}
            </if>
            <if test="updateTimeStart !=null and  updateTimeEnd != null">
                  and t.update_time between #{updateTimeStart} and #{updateTimeEnd}
            </if>
            <if test="userId != null">
                  and t.user_id = #{userId}
            </if>
          </where>
    </select>
</mapper>
