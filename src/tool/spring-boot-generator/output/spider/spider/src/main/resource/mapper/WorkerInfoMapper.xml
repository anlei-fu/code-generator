<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spider.mapper.WorkerInfoMapper">
    <insert id="addWorkerInfo" parameterType="com.spider.pojo.req.AddWorkerInfoReq">
          insert  into worker_info
          <trim prefix="(" suffix=")" suffixOverrides=",">
             worker_info.ip,
            <if test="description != null">
                  worker_info.description,
            </if>
            <if test="joinTime != null">
                  worker_info.join_time,
            </if>
            <if test="lastRunTime != null">
                  worker_info.last_run_time
            </if>
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{ip},
            <if test="description != null">
                  #{description},
            </if>
            <if test="joinTime != null">
                  #{joinTime},
            </if>
            <if test="lastRunTime != null">
                  #{lastRunTime}
            </if>
          </trim>
    </insert>
    <delete id="deleteWorkerInfoById">
          delete from worker_info
          <where>
            <if test="id != null">
                  worker_info.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateWorkerInfoById" parameterType="com.spider.pojo.param.UpdateWorkerInfoByIdParams">
        update worker_info
        <set>
            <if test="ip != null">
                  worker_info.ip = #{Ip},
            </if>
            <if test="description != null">
                  worker_info.description = #{Description},
            </if>
            <if test="joinTime != null">
                  worker_info.join_time = #{JoinTime},
            </if>
            <if test="lastRunTime != null">
                  worker_info.last_run_time = #{LastRunTime}
            </if>
        </set>
          <where>
            <if test="id != null">
                  worker_info.id = #{id}
            </if>
          </where>
    </update>
    <select id="getWorkerInfoById" resultType="com.spider.pojo.entity.WorkerInfo">
          select
             worker_info.id,
             worker_info.ip,
             worker_info.description,
             worker_info.join_time,
             worker_info.last_run_time
          form worker_info
          <where>
            <if test="id != null">
                  worker_info.id = #{id}
            </if>
          </where>
    </select>
    <select id="getWorkerInfoList" resultType="com.spider.pojo.entity.WorkerInfo" parameterType="com.spider.pojo.req.GetWorkerInfoListReq">
          select
             worker_info.id,
             worker_info.ip,
             worker_info.description,
             worker_info.join_time,
             worker_info.last_run_time
          form worker_info
          <where>
            <if test="ip != null">
                  worker_info.ip = #{ip}
            </if>
            <if test="joinTime != null">
                  and worker_info.join_time = #{joinTime}
            </if>
            <if test="lastRunTime != null">
                  and worker_info.last_run_time = #{lastRunTime}
            </if>
          </where>
    </select>
</mapper>
