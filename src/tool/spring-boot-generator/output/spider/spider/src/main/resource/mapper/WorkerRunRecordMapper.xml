<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.undefined.mapper.WorkerRunRecordMapper">
    <insert id="addWorkerRunRecord">
          insert  into worker_run_record
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="endTime != null">
              worker_run_record.end_time,
            </if>
            <if test="startTime != null">
              worker_run_record.start_time,
            </if>
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="endTime != null">
              #{endTime},
            </if>
            <if test="startTime != null">
              #{startTime},
            </if>
          </trim>
    </insert>

    <delete id="deleteWorkerRunRecordById">
          delete from worker_run_record
          <where>
            <if test="id != null">
              worker_run_record.id = #{id}
            </if>
          </where>
    </delete>

    <update id="updateWorkerRunRecordById">
        update worker_run_record
        <set>
            <if test="endTime != null">
              worker_run_record.end_time = #{endTime},
            </if>
            <if test="startTime != null">
              worker_run_record.start_time = #{startTime}
            </if>
        </set>
          <where>
            <if test="id != null">
              worker_run_record.id = #{id}
            </if>
          </where>
    </update>

    <select id="getWorkerRunRecordById">
          select
              worker_run_record.end_time,
              worker_run_record.id,
              worker_run_record.start_time
          form worker_run_record
          <where>
            <if test="id != null">
              worker_run_record.id = #{id}
            </if>
          </where>
    </select>

    <select id="getWorkerRunRecordList">
          select
              worker_run_record.end_time,
              worker_run_record.id,
              worker_run_record.start_time
          form worker_run_record
          <where>
            <if test="endTime != null">
              worker_run_record.end_time = #{endTime}
            </if>
            <if test="startTime != null">
              and worker_run_record.start_time = #{startTime}
            </if>
          </where>
    </select>
</mapper>