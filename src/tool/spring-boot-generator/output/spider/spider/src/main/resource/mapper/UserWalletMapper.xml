<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spider.mapper.UserWalletMapper">
    <insert id="addUserWallet" parameterType="com.spider.pojo.req.AddUserWalletReq">
          insert  into user_wallet
          <trim prefix="(" suffix=")" suffixOverrides=",">
             user_wallet.user_id,
             user_wallet.total,
            <if test="createTime != null">
                  user_wallet.create_time
            </if>
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{userId},
             #{total},
            <if test="createTime != null">
                  #{createTime}
            </if>
          </trim>
    </insert>
    <delete id="deleteUserWalletById">
          delete from user_wallet
          <where>
            <if test="id != null">
                  user_wallet.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserWalletById" parameterType="com.spider.pojo.param.UpdateUserWalletByIdParams">
        update user_wallet
        <set>
            <if test="userId != null">
                  user_wallet.user_id = #{UserId},
            </if>
            <if test="total != null">
                  user_wallet.total = #{Total},
            </if>
            <if test="createTime != null">
                  user_wallet.create_time = #{CreateTime}
            </if>
        </set>
          <where>
            <if test="id != null">
                  user_wallet.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserWalletById" resultType="com.spider.pojo.entity.UserWallet">
          select
             user_wallet.id,
             user_wallet.user_id,
             user_wallet.total,
             user_wallet.create_time
          form user_wallet
          <where>
            <if test="id != null">
                  user_wallet.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserWalletList" resultType="com.spider.pojo.entity.UserWallet" parameterType="com.spider.pojo.req.GetUserWalletListReq">
          select
             user_wallet.id,
             user_wallet.user_id,
             user_wallet.total,
             user_wallet.create_time
          form user_wallet
          <where>
            <if test="userId != null">
                  user_wallet.user_id = #{userId}
            </if>
            <if test="total != null">
                  range            </if>
            <if test="createTime != null">
                  and user_wallet.create_time = #{createTime}
            </if>
          </where>
    </select>
</mapper>
