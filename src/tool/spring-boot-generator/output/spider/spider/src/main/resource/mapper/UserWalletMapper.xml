<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.undefined.mapper.UserWalletMapper">
    <insert id="addUserWallet">
          insert  into user_wallet
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createTime != null">
              user_wallet.create_time,
            </if>
              user_wallet.total,
              user_wallet.user_id,
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createTime != null">
              #{createTime},
            </if>
              #{total},
              #{userId},
          </trim>
    </insert>

    <delete id="deleteUserWalletById">
          delete from user_wallet
          <where>
            <if test="id != null">
              user_wallet.id = #{id}
            </if>
          </where>
    </delete>

    <update id="updateUserWalletById">
        update user_wallet
        <set>
            <if test="createTime != null">
              user_wallet.create_time = #{createTime},
            </if>
            <if test="total != null">
              user_wallet.total = #{total},
            </if>
            <if test="userId != null">
              user_wallet.user_id = #{userId}
            </if>
        </set>
          <where>
            <if test="id != null">
              user_wallet.id = #{id}
            </if>
          </where>
    </update>

    <select id="getUserWalletById">
          select
              user_wallet.create_time,
              user_wallet.id,
              user_wallet.total,
              user_wallet.user_id
          form user_wallet
          <where>
            <if test="id != null">
              user_wallet.id = #{id}
            </if>
          </where>
    </select>

    <select id="getUserWalletList">
          select
              user_wallet.create_time,
              user_wallet.id,
              user_wallet.total,
              user_wallet.user_id
          form user_wallet
          <where>
            <if test="createTime != null">
              user_wallet.create_time = #{createTime}
            </if>
            <if test="total != null">
              and user_wallet.total = #{total}
            </if>
            <if test="userId != null">
              and user_wallet.user_id = #{userId}
            </if>
          </where>
    </select>
</mapper>