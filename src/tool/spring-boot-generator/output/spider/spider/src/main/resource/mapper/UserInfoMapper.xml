<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.undefined.mapper.UserInfoMapper">
    <insert id="addUserInfo">
          insert  into user_info
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createTime != null">
              user_info.create_time,
            </if>
            <if test="email != null">
              user_info.email,
            </if>
            <if test="lastLoginIp != null">
              user_info.last_login_ip,
            </if>
            <if test="lastLoginTime != null">
              user_info.last_login_time,
            </if>
            <if test="password != null">
              user_info.password,
            </if>
            <if test="phoneNo != null">
              user_info.phone_no,
            </if>
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createTime != null">
              #{createTime},
            </if>
            <if test="email != null">
              #{email},
            </if>
            <if test="lastLoginIp != null">
              #{lastLoginIp},
            </if>
            <if test="lastLoginTime != null">
              #{lastLoginTime},
            </if>
            <if test="password != null">
              #{password},
            </if>
            <if test="phoneNo != null">
              #{phoneNo},
            </if>
          </trim>
    </insert>

    <delete id="deleteUserInfoById">
          delete from user_info
          <where>
            <if test="id != null">
              user_info.id = #{id}
            </if>
          </where>
    </delete>

    <update id="updateUserInfoById">
        update user_info
        <set>
            <if test="createTime != null">
              user_info.create_time = #{createTime},
            </if>
            <if test="email != null">
              user_info.email = #{email},
            </if>
            <if test="lastLoginIp != null">
              user_info.last_login_ip = #{lastLoginIp},
            </if>
            <if test="lastLoginTime != null">
              user_info.last_login_time = #{lastLoginTime},
            </if>
            <if test="password != null">
              user_info.password = #{password},
            </if>
            <if test="phoneNo != null">
              user_info.phone_no = #{phoneNo}
            </if>
        </set>
          <where>
            <if test="id != null">
              user_info.id = #{id}
            </if>
          </where>
    </update>

    <select id="getUserInfoById">
          select
              user_info.create_time,
              user_info.email,
              user_info.id,
              user_info.last_login_ip,
              user_info.last_login_time,
              user_info.password,
              user_info.phone_no
          form user_info
          <where>
            <if test="id != null">
              user_info.id = #{id}
            </if>
          </where>
    </select>

    <select id="getUserInfoList">
          select
              user_info.create_time,
              user_info.email,
              user_info.id,
              user_info.last_login_ip,
              user_info.last_login_time,
              user_info.password,
              user_info.phone_no
          form user_info
          <where>
            <if test="createTime != null">
              user_info.create_time = #{createTime}
            </if>
            <if test="email != null">
              and user_info.email = #{email}
            </if>
            <if test="lastLoginIp != null">
              and user_info.last_login_ip = #{lastLoginIp}
            </if>
            <if test="lastLoginTime != null">
              and user_info.last_login_time = #{lastLoginTime}
            </if>
            <if test="password != null">
              and user_info.password = #{password}
            </if>
            <if test="phoneNo != null">
              and user_info.phone_no = #{phoneNo}
            </if>
          </where>
    </select>
</mapper>