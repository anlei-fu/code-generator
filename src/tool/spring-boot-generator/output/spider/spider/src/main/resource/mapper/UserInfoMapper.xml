<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spider.mapper.UserInfoMapper">
    <insert id="addUserInfo" parameterType="com.spider.pojo.req.AddUserInfoReq">
          insert  into user_info
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="phoneNo != null">
                  user_info.phone_no,
            </if>
            <if test="email != null">
                  user_info.email,
            </if>
            <if test="password != null">
                  user_info.password,
            </if>
            <if test="lastLoginIp != null">
                  user_info.last_login_ip,
            </if>
            <if test="lastLoginTime != null">
                  user_info.last_login_time,
            </if>
            <if test="createTime != null">
                  user_info.create_time
            </if>
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="phoneNo != null">
                  #{phoneNo},
            </if>
            <if test="email != null">
                  #{email},
            </if>
            <if test="password != null">
                  #{password},
            </if>
            <if test="lastLoginIp != null">
                  #{lastLoginIp},
            </if>
            <if test="lastLoginTime != null">
                  #{lastLoginTime},
            </if>
            <if test="createTime != null">
                  #{createTime}
            </if>
          </trim>
    </insert>
    <delete id="deleteUserInfoById">
          delete from user_info
          <where>
            <if test="id != null">
                  user_info.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserInfoById" parameterType="com.spider.pojo.param.UpdateUserInfoByIdParams">
        update user_info
        <set>
            <if test="phoneNo != null">
                  user_info.phone_no = #{PhoneNo},
            </if>
            <if test="email != null">
                  user_info.email = #{Email},
            </if>
            <if test="password != null">
                  user_info.password = #{Password},
            </if>
            <if test="lastLoginIp != null">
                  user_info.last_login_ip = #{LastLoginIp},
            </if>
            <if test="lastLoginTime != null">
                  user_info.last_login_time = #{LastLoginTime},
            </if>
            <if test="createTime != null">
                  user_info.create_time = #{CreateTime}
            </if>
        </set>
          <where>
            <if test="id != null">
                  user_info.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserInfoById" resultType="com.spider.pojo.entity.UserInfo">
          select
             user_info.id,
             user_info.phone_no,
             user_info.email,
             user_info.password,
             user_info.last_login_ip,
             user_info.last_login_time,
             user_info.create_time
          form user_info
          <where>
            <if test="id != null">
                  user_info.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserInfoList" resultType="com.spider.pojo.entity.UserInfo" parameterType="com.spider.pojo.req.GetUserInfoListReq">
          select
             user_info.id,
             user_info.phone_no,
             user_info.email,
             user_info.password,
             user_info.last_login_ip,
             user_info.last_login_time,
             user_info.create_time
          form user_info
          <where>
            <if test="phoneNo != null and phoneNo != ''">
                  user_info.phone_no = #{phoneNo}
            </if>
            <if test="email != null and email != ''">
                  and user_info.email = #{email}
            </if>
            <if test="lastLoginTime != null">
                  and user_info.last_login_time = #{lastLoginTime}
            </if>
            <if test="createTime != null">
                  and user_info.create_time = #{createTime}
            </if>
          </where>
    </select>
</mapper>
