<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.undefined.mapper.SiteInfoMapper">
    <insert id="addSiteInfo">
          insert  into site_info
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="description != null">
              site_info.description,
            </if>
            <if test="mainDomain != null">
              site_info.main_domain,
            </if>
            <if test="type != null">
              site_info.type,
            </if>
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="description != null">
              #{description},
            </if>
            <if test="mainDomain != null">
              #{mainDomain},
            </if>
            <if test="type != null">
              #{type},
            </if>
          </trim>
    </insert>

    <delete id="deleteSiteInfoById">
          delete from site_info
          <where>
            <if test="id != null">
              site_info.id = #{id}
            </if>
          </where>
    </delete>

    <update id="updateSiteInfoById">
        update site_info
        <set>
            <if test="description != null">
              site_info.description = #{description},
            </if>
            <if test="mainDomain != null">
              site_info.main_domain = #{mainDomain},
            </if>
            <if test="type != null">
              site_info.type = #{type}
            </if>
        </set>
          <where>
            <if test="id != null">
              site_info.id = #{id}
            </if>
          </where>
    </update>

    <select id="getSiteInfoById">
          select
              site_info.description,
              site_info.id,
              site_info.main_domain,
              site_info.type
          form site_info
          <where>
            <if test="id != null">
              site_info.id = #{id}
            </if>
          </where>
    </select>

    <select id="getSiteInfoList">
          select
              site_info.description,
              site_info.id,
              site_info.main_domain,
              site_info.type
          form site_info
          <where>
            <if test="description != null">
              site_info.description = #{description}
            </if>
            <if test="mainDomain != null">
              and site_info.main_domain = #{mainDomain}
            </if>
            <if test="type != null">
              and site_info.type = #{type}
            </if>
          </where>
    </select>
</mapper>