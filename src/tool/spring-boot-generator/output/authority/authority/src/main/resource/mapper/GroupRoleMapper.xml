<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.authority.mapper.GroupRoleMapper">
    <insert id="addGroupRole" parameterType="com.authority.pojo.param.AddGroupRoleParams">
          insert  into group_role t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.user_account,
             t.system_id,
             t.role,
             t.create_user,
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{UserAccount},
             #{SystemId},
             #{Role},
             #{CreateUser},
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteGroupRoleByUserAndUserAndUserAndUserAndId">
          delete from group_role t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateGroupRoleByUserAndUserAndUserAndUserAndId" parameterType="com.authority.pojo.param.UpdateGroupRoleByUserAndUserAndUserAndUserAndIdParams">
        update group_role t
        <set>
            <if test="userAccount != null">
                  t.user_account = #{UserAccount},
            </if>
            <if test="systemId != null">
                  t.system_id = #{SystemId},
            </if>
            <if test="role != null">
                  t.role = #{Role}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getGroupRoleByUserAndUserAndUserAndUserAndId" resultType="com.authority.pojo.entity.GroupRole">
          select
             t.id,
             t.user_account,
             t.system_id,
             t.role,
             t.create_user,
             t.create_time
          form group_role t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getGroupRoleList" resultType="com.authority.pojo.entity.GroupRole" parameterType="com.authority.pojo.req.GetGroupRoleListReq">
          select
             t.id,
             t.user_account,
             t.system_id,
             t.role,
             t.create_user,
             t.create_time
          form group_role t
          <where>
            <if test="userAccount != null">
                  t.user_account = #{userAccount}
            </if>
            <if test="systemId != null">
                  and t.system_id = #{systemId}
            </if>
            <if test="role != null">
                  and t.role = #{role}
            </if>
            <if test="createUser != null">
                  and t.create_user = #{createUser}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
          </where>
    </select>
</mapper>
