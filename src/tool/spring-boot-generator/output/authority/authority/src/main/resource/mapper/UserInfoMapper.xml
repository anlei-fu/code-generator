<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.authority.mapper.UserInfoMapper">
    <insert id="addUserInfo" parameterType="com.authority.pojo.param.AddUserInfoParams">
          insert  into user_info t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.password,
             t.create_user,
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{Password},
             #{CreateUser},
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteUserInfoByUserAndUserAndUserAndUserAndAccount">
          delete from user_info t
          <where>
            <if test="account != null">
                  t.account = #{account}
            </if>
          </where>
    </delete>
    <update id="updateUserInfoByUserAndUserAndUserAndUserAndAccount" parameterType="com.authority.pojo.param.UpdateUserInfoByUserAndUserAndUserAndUserAndAccountParams">
        update user_info t
        <set>
            <if test="password != null">
                  t.password = #{Password}
            </if>
        </set>
          <where>
            <if test="account != null">
                  t.account = #{account}
            </if>
          </where>
    </update>
    <select id="getUserInfoByUserAndUserAndUserAndUserAndAccount" resultType="com.authority.pojo.entity.UserInfo">
          select
             t.account,
             t.password,
             t.create_time,
             t.create_user
          form user_info t
          <where>
            <if test="account != null">
                  t.account = #{account}
            </if>
          </where>
    </select>
    <select id="getUserInfoList" resultType="com.authority.pojo.entity.UserInfo" parameterType="com.authority.pojo.req.GetUserInfoListReq">
          select
             t.account,
             t.password,
             t.create_time,
             t.create_user
          form user_info t
          <where>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
            <if test="createUser != null">
                  and t.create_user = #{createUser}
            </if>
          </where>
    </select>
</mapper>
