<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.authority.mapper.SystemRoleInfoMapper">
    <insert id="addSystemRoleInfo" parameterType="com.authority.pojo.param.AddSystemRoleInfoParams">
          insert  into system_role_info t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.system_id,
             t.role,
            <if test="description != null">
                  t.description,
            </if>
             t.create_user,
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{SystemId},
             #{Role},
            <if test="description != null">
                  #{Description},
            </if>
             #{CreateUser},
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteSystemRoleInfoByUserAndUserAndUserAndUserAndId">
          delete from system_role_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateSystemRoleInfoByUserAndUserAndUserAndUserAndId" parameterType="com.authority.pojo.param.UpdateSystemRoleInfoByUserAndUserAndUserAndUserAndIdParams">
        update system_role_info t
        <set>
            <if test="systemId != null">
                  t.system_id = #{SystemId},
            </if>
            <if test="role != null">
                  t.role = #{Role},
            </if>
            <if test="description != null">
                  t.description = #{Description}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getSystemRoleInfoByUserAndUserAndUserAndUserAndId" resultType="com.authority.pojo.entity.SystemRoleInfo">
          select
             t.id,
             t.system_id,
             t.role,
             t.description,
             t.create_user,
             t.create_time
          form system_role_info t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getSystemRoleInfoList" resultType="com.authority.pojo.entity.SystemRoleInfo" parameterType="com.authority.pojo.req.GetSystemRoleInfoListReq">
          select
             t.id,
             t.system_id,
             t.role,
             t.description,
             t.create_user,
             t.create_time
          form system_role_info t
          <where>
            <if test="systemId != null">
                  t.system_id = #{systemId}
            </if>
            <if test="role != null">
                  and t.role = #{role}
            </if>
            <if test="createUser != null">
                  and t.create_user = #{createUser}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
          </where>
    </select>
</mapper>
