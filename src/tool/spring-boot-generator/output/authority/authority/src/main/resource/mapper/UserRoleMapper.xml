<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.authority.mapper.UserRoleMapper">
    <insert id="addUserRole" parameterType="com.authority.pojo.param.AddUserRoleParams">
          insert  into user_role t
          <trim prefix="(" suffix=")" suffixOverrides=",">
             t.user_account,
             t.system_id,
             t.create_user,
             t.create_time
          </trim>
          values
          <trim prefix="(" suffix=")" suffixOverrides=",">
             #{UserAccount},
             #{SystemId},
             #{createUser},
             current_timestamp
          </trim>
    </insert>
    <delete id="deleteUserRoleByUserAndUserAndUserAndUserAndId">
          delete from user_role t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </delete>
    <update id="updateUserRoleByUserAndUserAndUserAndUserAndId" parameterType="com.authority.pojo.param.UpdateUserRoleByUserAndUserAndUserAndUserAndIdParams">
        update user_role t
        <set>
            <if test="userAccount != null">
                  t.user_account = #{UserAccount},
            </if>
            <if test="systemId != null">
                  t.system_id = #{SystemId}
            </if>
        </set>
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </update>
    <select id="getUserRoleByUserAndUserAndUserAndUserAndId" resultType="com.authority.pojo.entity.UserRole">
          select
             t.id,
             t.user_account,
             t.system_id,
             t.create_user,
             t.create_time
          form user_role t
          <where>
            <if test="id != null">
                  t.id = #{id}
            </if>
          </where>
    </select>
    <select id="getUserRoleList" resultType="com.authority.pojo.entity.UserRole" parameterType="com.authority.pojo.req.GetUserRoleListReq">
          select
             t.id,
             t.user_account,
             t.system_id,
             t.create_user,
             t.create_time
          form user_role t
          <where>
            <if test="userAccount != null">
                  t.user_account = #{userAccount}
            </if>
            <if test="systemId != null">
                  and t.system_id = #{systemId}
            </if>
            <if test="createUser != null">
                  and t.create_user = #{createUser}
            </if>
            <if test="createTimeStart !=null and  createTimeEnd != null">
                  and t.create_time between #{createTimeStart} and #{createTimeEnd}
            </if>
          </where>
    </select>
</mapper>
