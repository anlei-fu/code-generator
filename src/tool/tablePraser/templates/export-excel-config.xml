<item name="exportExcel">
        <sql>
                <![CDATA[
              SELECT  t.*
                    FROM (
                         SELECT 
                                r.Rid
                         FROM (
                                SELECT  t.rowid RID 
                                FROM  @table.name t  
                                WHERE    
                                     1=1
                                     @filtes
                                ) r
                           ) tab
                   INNER JOIN @table.name t ON tab.rid = t.rowid
        ]]>
        </sql>
</item>