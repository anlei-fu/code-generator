<?xml version="1.0" encoding="utf-8" ?>
<config>
  <table name="_FC_ACTIVE_RECORD">
    <fields>
      <filed pname="Id" name="_ID" label=""/>
      <filed pname="TaskId" name="_TASK_ID" label=""/>
      <filed pname="Phone" name="_PHONE" label=""/>
      <filed pname="Idno" name="_IDNO" label=""/>
      <filed pname="ActiveStatus" name="_ACTIVE_STATUS" label=""/>
      <filed pname="ActiveTime" name="_ACTIVE_TIME" label=""/>
      <filed pname="FirstChargeStatus" name="_FIRST_CHARGE_STATUS" label=""/>
      <filed pname="FirstChargeTime" name="_FIRST_CHARGE_TIME" label=""/>
      <filed pname="DealStatus" name="_DEAL_STATUS" label=""/>
      <filed pname="DealMsg" name="_DEAL_MSG" label=""/>
      <filed pname="CreateTime" name="_CREATE_TIME" label=""/>

    </fields>
  </table>
  <template>
    <item name="getList">
      <sql>
        <![CDATA[
          select  t.*
                    from (SELECT RID
                            FROM (SELECT R.RID, ROWNUM LINENUM
                                    FROM (SELECT t.rowid RID
                                          FROM  _FC_ACTIVE_RECORD t
                                            WHERE 
                                            1=1
                                           ORDER BY t.Create_Time DESC) R
                                   WHERE ROWNUM <= { :PS} * { :PI})
                           WHERE LINENUM > { :PS} * ({ :PI} - 1)) tab
                   inner join _FC_ACTIVE_RECORD t on tab.rid = t.rowid
        ]]>
      </sql>
    </item>
    <item name="getCount">
      <sql>
        <![CDATA[
          SELECT COUNT(1) FROM _FC_ACTIVE_RECORD  t  WHERE 
                                             1=1
        ]]>
      </sql>
    </item>
  </template>
</config>